@model Commercan.GoogleAnalytics.ViewModels.SettingsViewModel

<h1>@Html.TitleForPage(T("Manage Google Analytics").ToString())</h1>
@using (Html.BeginFormAntiForgeryPost()) {
    @Html.ValidationSummary()
    <fieldset>
        <div>
            @Html.EditorFor(m => m.Enable)
            <label class="forcheckbox" for="@Html.FieldIdFor(m=> m.Enable)">@T("Enable Google Analytics")</label>
            <span class="hint">@T("This will add the Google Analytics tracker to every page.")</span>
        </div>
        <div data-controllerid="@Html.FieldIdFor(m => m.Enable)">
            <label for="@Html.FieldIdFor(m => m.GoogleAnalyticsKey)">@T("Google Analytics Tracking Key (UA-XXXX-Y)")</label>
            @Html.EditorFor(m => m.GoogleAnalyticsKey)
            @Html.ValidationMessage("GoogleAnalyticsKey", "*")
        </div>
        <div data-controllerid="@Html.FieldIdFor(m => m.Enable)">
            @Html.EditorFor(m => m.UseUniversalTracking)
            <label for="@Html.FieldIdFor(m => m.GoogleAnalyticsKey)">@T("Upgrade to Google Universal Analytics?")</label>
            <span class="hint">@T("Before enabling this feature, follow the steps in the Universal Analytics Upgrade Center - Upgrade Guide. " +
                                  "The guide is available at https://developers.google.com/analytics/devguides/collection/upgrade/guide")</span>
        </div>
    </fieldset>
    
    <input class="button" type="submit" value ="@T("Save")"/>
}